require 'zendesk_ticket'
require 'labelled_snippet'

module Zendesk
  module Ticket
    class <%= zendesk_ticket_model_class_name %> < ZendeskTicket
      def subject
        "<%= ("new " + singular_request_name).humanize %>"
      end

      def tags
        super + ["<%= name.underscore %>"]
      end

      protected
      def comment_snippets
        [ 
          LabelledSnippet.new(on: @request, field: :url),
          LabelledSnippet.new(on: @request, field: :additional)
        ]
      end
    end
  end
end
