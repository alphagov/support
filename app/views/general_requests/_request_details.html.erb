<div class="alert alert-info">
  <p>Please use this path to:</p>
  <ul>
    <li>report planned departmental changes that affect GOV.UK and its users</li>
    <li>report issues that don't fit into other categories</li>
  </ul>
</div>

<%= f.input :title, label: "Title of request", input_html: { class: "input-md-6", placeholder: "General request" } %>

<%= f.inputs "Details of your problem, request or suggestion" do %>
  <%= f.input :details, as: :text, label: "Details", required: true, input_html: { class: "input-md-6", rows: 6, cols: 50, :"aria-required" => true } %>

  <%= f.input :url, label: "URL (if applicable)", input_html: { class: "input-md-6" } %>
<% end %>

<%= render partial: "support/collaborators", locals: { f: f } %>
