<%= f.inputs "Control Center information" do %>
  <%= f.input :control_center_ticket_number, label: "Control Center ticket number", required: true, input_html: { class: "span6", :"aria-required" => true } %>
  <%= f.input :local_authority_impacted, label: "Local authority impacted", required: true, input_html: { class: "span6", :"aria-required" => true } %>

  <%= f.input :issue_category, label: "Issue category", required: true, input_html: { class: "span6", :"aria-required" => true } %>

  <%= f.input :are_multiple_local_authorities_impacted, as: :boolean, required: false, label: "Multiple local authorities impacted?" %>
<% end %>

<%= f.inputs "Problem details" do %>
  <%= f.input :description, as: :text, label: "Describe the problem", required: true, input_html: { class: "span6", rows: 6, cols: 50, :"aria-required" => true } %>
  <%= f.input :investigation, as: :text, label: "What has been done to ensure that this is a GDS problem?", input_html: { class: "span6", rows: 6, cols: 50 } %>
<% end %>

<%= f.input :additional, as: :text, label: "Additional details", input_html: { class: "span6", rows: 6, cols: 50 } %>