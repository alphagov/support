<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %> | GOV.UK Support</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application.css' %>
  <%= yield :extra_headers %>
  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "html5" %>
  <![endif]-->
  <%= javascript_include_tag "application" %>
</head>
<body>
  <header class="navbar navbar-inverse navbar-fixed-top" role="banner">
    <div class="navbar-inner">
      <div class="container-fluid">
        <%= link_to 'GOV.UK Support', root_path, :class => "brand" %>
      </div>
    </div>
  </header>

  <section class="container-fluid" role="main">
    <div class="row-fluid">
      <div class="span12">

        <div class="page-header">
          <h1><%= yield :header %></h1>
        </div>

        <div class="row-fluid">
          <div class="span2">
            <div class="well sidebar-nav">
              <ul class="nav nav-list">
                <li class="nav-header">Content request</li>
                <%= nav_link 'Content change', '/amend-content' %>
              </ul>
              <ul class="nav nav-list">
                <li class="nav-header">User Access</li>
                <%= nav_link 'Create new user', '/create-user' %>
                <%= nav_link 'Remove user', '/remove-user' %>
              </ul>
              <ul class="nav nav-list">
                <li class="nav-header">Campaigns</li>
                <%= nav_link 'Campaign', '/campaign' %>
              </ul>
              <ul class="nav nav-list">
                <li class="nav-header">Other Issues</li>
                <%= nav_link 'General', '/general' %>
                <%= nav_link 'Publishing tool', '/publish-tool' %>
              </ul>
            </div>

          </div>

          <div class="span10">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <footer>
      <p>&copy; GDS. <span class="pull-right">Support release: <%= CURRENT_RELEASE_SHA %></span> </p>
    </footer>
  </section>

  <%= yield :extra_javascript %>

</body>
</html>
