<%= f.fields_for :requested_user do |r| %>
  <fieldset>
    <legend>
      <span>User details</span>
    </legend>

    <div class="form-group">
      <span class="form-label">
        <%= r.label :name do %>
          Name<abbr title="required">*</abbr>
        <% end %>
      </span>
      <span class="form-wrapper">
        <%= r.text_field :name, required: true, aria: { required: true }, class: "input-md-6 form-control" %>
      </span>
    </div>

    <div class="form-group">
      <span class="form-label">
        <%= r.label :email do %>
          Email<abbr title="required">*</abbr>
        <% end %>
      </span>
      <span class="form-wrapper">
        <%= r.email_field :email, required: true, aria: { required: true }, class: "input-md-6 form-control" %>
      </span>
    </div>

    <div class="form-group select">
      <span class="form-label">
        <%= r.label :organisation do %>
          Organisation
        <% end %>
      </span>
      <span class="form-wrapper">
        <%= r.select :organisation, options_for_select(@organisations_list), { include_blank: true }, multiple: false, class: "input-md-7 select2 form-control", type: "organisation" %>
      </span>
    </div>
  </fieldset>
<% end %>
