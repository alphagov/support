<div class="alert alert-info">
  <p><%= f.object.class.description %></p>
</div>

<%= f.semantic_fields_for :campaign do |r| %>
  <%= r.inputs :name => "Campaign details" do %>
    <%= r.input :title, label: "Campaign title", required: true, input_html: {:class => "input-md-6", :"aria-required" => true} %>

    <%= r.input :erg_reference_number, label: "ERG reference number", input_html: {:class => "input-md-6"} %>

    <%= r.input :start_date, label: "Start date", required: false, input_html: { class: "input-md-2", :"data-module" => 'calendar', :"data-format" => 'dd-mm-yy', :"data-min-date" => 0, :placeholder => "dd-mm-yyyy", :value => r.object.start_date} %>
    <%= r.input :description, as: :text, label: "Campaign description", required: true, input_html: {:class => "input-md-6", :rows => 6, :cols => 50, :"aria-required" => true } %>

    <%= r.input :affiliated_group_or_company, label: "Group or company affiliated with this campaign", required: false, input_html: { class: "input-md-6" } %>

    <%= r.input :info_url, label: "URL with more information", required: false, input_html: { class: "input-md-6" } %>
  <% end %>
<% end %>

<%= f.input :additional_comments, as: :text, label: "Additional comments", input_html: { class: "input-md-6", rows: 6, cols: 50 } %>

<%= render partial: "support/collaborators", locals: { f: f } %>
